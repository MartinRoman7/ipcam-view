<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3">
    <ImageView
        android:id="@+id/imagen_login"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/login"/>


    <EditText
        android:id="@+id/Usuario_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagen_login"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Usuario" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Usuario_login"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:textSize="16dp"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/aceptar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/password_login"
        android:layout_marginTop="30dp"
        android:background="#3E87A9"
        android:textColor="#FFFFFF"
        android:text="Aceptar" />

    <Button
        android:id="@+id/registro"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/password_login"
        android:layout_marginTop="30dp"
        android:background="#F6B127"
        android:textColor="#FFFFFF"
        android:text="Registro" />


</RelativeLayout>

