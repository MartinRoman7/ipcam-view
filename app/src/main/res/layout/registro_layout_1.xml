<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/final_registro">



    <EditText
        android:id="@+id/Usuario_registro_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Usuario"
        android:textColor="#F7F6F6"
        android:textSize="16dp"/>

    <EditText
        android:id="@+id/password_registro_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Usuario_registro_1"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:textSize="16dp"
        android:hint="Contraseña"
        android:textColor="#F7F6F6"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/passworda_registro_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_registro_1"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:textSize="16dp"
        android:hint="Contraseña again"
        android:textColor="#F7F6F6"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/cancelar_1"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/passworda_registro_1"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_login"
        android:textColor="#F7F6F6"
        android:text="Cancelar" />

    <Button
        android:id="@+id/aceptar_1"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/passworda_registro_1"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_login"
        android:textColor="#F7F6F6"
        android:text="Aceptar" />

</RelativeLayout>

