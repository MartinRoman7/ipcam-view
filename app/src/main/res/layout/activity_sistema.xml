<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stream="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/final_fondo"
    tools:context="com.github.niqdev.ipcam.IpCamSnapshotActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tx_username1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_marginTop="21dp"
            android:text="Control de sistema"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/cerraduraU_btn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/cerraduraL_btn"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/final_sistema_activado" />

        <ImageButton
            android:id="@+id/cerraduraL_btn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_above="@+id/opendoor_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/final_sistema_desactivado" />

        <TextView
            android:id="@+id/tx_username2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cerraduraU_btn"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/opendoor_btn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/final_door_open" />

        <ImageButton
            android:id="@+id/closedoor_btn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/final_door_close" />


    </RelativeLayout>

</LinearLayout>
